@page
@model StudyReg.Web.Pages.Decks.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Decks</h2>

<a class="btn btn-success pull-right" asp-page="Create"><i class="glyphicon glyphicon-plus"></i>&nbsp;New Deck</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Deck[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deck[0].Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Deck) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Manage" asp-route-id="@item.Id">&nbsp;<i class="glyphicon glyphicon-pencil"></i>&nbsp;</a>
            </td>
        </tr>
}
    </tbody>
</table>
