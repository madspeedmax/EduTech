@page
@model StudyReg.Web.Pages.Decks.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Editing Deck</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Deck.Id" />
            <div class="form-group">
                <label asp-for="Deck.Title" class="control-label"></label>
                <input asp-for="Deck.Title" class="form-control" />
                <span asp-validation-for="Deck.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
